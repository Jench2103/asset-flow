# EditorConfig for AssetFlow
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.swift]
indent_style = space
indent_size = 2
max_line_length = 100
tab_width = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{json,yml}]
indent_size = 2
